<div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
  <header class="masthead mb-auto">
    <div class="inner ">
      <h3 class="cover text-white" style="font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;" >Query Desk</h3>
    </div>
  </header>
    
<% if notice %>
  <div class="alert alert-success" role="alert">
    <%= notice %>
  </div>
<% elsif alert %>
  <div class="alert alert-danger" role="alert">
    <%= alert %>
  </div>
<% end %>

  
    <!-- Button trigger modal -->
<% if session[:student_user_id] or session[:teacher_user_id] %>
<main role="main" class="inner cover text-white">
    <h1 class="cover-heading">Any Information</h1>
    <p class="lead">Descriptin of the website in a few words or any rules that needs to be specified..</p>
    <%= button_to("Go To Dashboard", home_dashboard_path, :class => "btn btn-lg btn-primary lead", method: :get) %>
</main>
	  <footer class="mastfoot mt-auto">
	    <div class="inner">
	    </div>
	  </footer>
</div>

<% else %>

    <main role="main" class="inner cover text-white">
    <h1 class="cover-heading">Any Information</h1>
    <p class="lead">Descriptin of the website in a few words or any rules that needs to be specified..</p>
	<button type="button" class="btn btn-lg btn-primary lead" data-toggle="modal" data-target="#exampleModalCenter">
	  Let's Start
	</button>

	<!-- Modal -->
	<div class="modal fades" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
	  <div class="modal-dialog modal-dialog-centered" role="document">
	    <div class="modal-content ">
	      <div class="modal-header">
	        <h5 class="modal-title text-dark" id="exampleModalLongTitle">Login as</h5>
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
	          <span aria-hidden="true">&times;</span>
	        </button>
	      </div>

	      <!--First Inner Modal-->
	      <div class="modal-body">
	        <button type="button" class="btn btn-info"
	        data-toggle="modal" data-target="#staticBackdrop"><a  data-dismiss="modal fades" onclick="modal fade1">Student</a>
	        </button>
	         
	      
	    <div class="modal fade1" id="staticBackdrop" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
	      <div class="modal-dialog modal-dialog-centered" role="document">
	        <div class="modal-content">
	          <div class="modal-header">
	            <h5 class="modal-title text-dark" id="staticBackdropLabel">Choose any One</h5>
	            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
	            <span aria-hidden="true">&times;</span>
	            </button>
	          </div>
	            <div class="modal-body">
	            	<%= button_to("Sign In", students_sign_in_path, :class => "btn btn-info", method: :get) %>
	              	<%= button_to("Sign Up", students_sign_up_path, :class => "btn btn-info", method: :get) %>

	        
	          </div>
	          <div class="modal-footer">
	          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
	        
	          </div>
	        </div>
	      </div>
	    </div>
	       



	  <!--- Second Inner Modal Button-->
	        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#staticBackdrop1" ><a  data-dismiss="modal fades" onclick="modal fade2">Teacher</a>
	         </button>
	    
	    <!--- Second Inner Modal starts-->
	        <div class="modal fade2" id="staticBackdrop1" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
	  <div class="modal-dialog modal-dialog-centered" role="document">
	    <div class="modal-content">
	      <div class="modal-header">
	        <h5 class="modal-title text-dark" id="staticBackdropLabel">Choose any One</h5>
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
	          <span aria-hidden="true">&times;</span>
	        </button>
	      </div>
	      <div class="modal-body">
	         <%= button_to("Sign In", teachers_sign_in_path, :class => "btn btn-info", method: :get) %>
			 <%= button_to("Sign Up", teachers_sign_up_path, :class => "btn btn-info", method: :get) %>
	      </div>
	          <div class="modal-footer">
	          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
	        
	           </div>
	      </div>
	    </div>
	  </div>




	</div>
	      <div class="modal-footer">
	        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
	        
	      </div>
	    </div>
	  </div>
	</div>
	  </main>



	  <footer class="mastfoot mt-auto">
	    <div class="inner">
	     
	    </div>
	  </footer>
	</div>
<% end %>
