<div class="container">

    

    

<div class="card mb-3 ">

<div class="card-body bg-light">
<h5 class="card-title text-dark">Notification</h5>

<% if @notifications.order(created_at: :desc).any? %>
<% @notifications.order(created_at: :desc).limit(20).each do |notification| %>
<div class="alert alert-info">
    <div class="container">
        <b>Notification:</b> <%= notification.body %> - <strong class="text-dark"><%= time_ago_in_words(notification.created_at) %> ago</strong>
    </div>
</div>
<% end %>
 <% @notifications.update_all(read: true) %>
<% else %>
  No new notifications
<% end %>


</div>
</div>
</div>


   
   
